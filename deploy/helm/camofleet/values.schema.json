{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": { "type": "string" },
        "imagePullSecrets": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "control": {
      "type": "object",
      "properties": {
        "replicas": { "type": "integer", "minimum": 1 },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" }
          },
          "required": ["repository"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "publicApiPrefix": { "type": "string" },
        "config": {
          "type": "object",
          "properties": {
            "workers": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "url": { "type": "string" },
                  "supports_vnc": { "type": "boolean" },
                  "vnc_ws": { "type": ["string", "null"] },
                  "vnc_http": { "type": ["string", "null"] }
                },
                "required": ["name", "url", "supports_vnc"]
              }
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "properties": {
        "replicas": { "type": "integer", "minimum": 1 },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string" }
          },
          "required": ["repository"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "controlHost": { "type": "string" }
      }
    },
    "worker": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "replicas": { "type": "integer", "minimum": 0 },
        "runnerPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "supportsVnc": { "type": "boolean" }
      }
    },
    "workerVnc": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "replicas": { "type": "integer", "minimum": 0 },
        "runnerPort": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "vncPortRange": {
          "type": "object",
          "properties": {
            "ws": {
              "type": "object",
              "properties": {
                "min": { "type": "integer", "minimum": 1, "maximum": 65535 },
                "max": { "type": "integer", "minimum": 1, "maximum": 65535 }
              }
            },
            "raw": {
              "type": "object",
              "properties": {
                "min": { "type": "integer", "minimum": 1, "maximum": 65535 },
                "max": { "type": "integer", "minimum": 1, "maximum": 65535 }
              }
            }
          }
        },
        "vncBase": {
          "type": "object",
          "properties": {
            "ws": { "type": "string" },
            "http": { "type": "string" }
          }
        },
        "controlOverrides": {
          "type": "object",
          "properties": {
            "ws": { "type": ["string", "null"] },
            "http": { "type": ["string", "null"] }
          }
        }
      }
    },
    "vncGateway": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "replicas": { "type": "integer", "minimum": 0 },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "runnerHost": { "type": "string" },
        "runnerHttpScheme": { "type": "string" },
        "runnerWsScheme": { "type": "string" },
        "runnerPathPrefix": { "type": "string" },
        "portRange": {
          "type": "object",
          "properties": {
            "min": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "max": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        }
      }
    }
  }
}
